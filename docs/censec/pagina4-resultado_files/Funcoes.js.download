function validaTELEFONE(custom, args) {
    var tel = args.Value;
    var telFormatado = tel.replace(/_/g, '').replace(/\(/g, '').replace(/\)/g, '').replace(/\-/g, '').replace(/ /g, '')
    if (telFormatado != '') {
        var RExp = /^\(\d{2}\) \d{4}-\d{4}$/;
        args.IsValid = RExp.test(args.Value);
    } else {
        args.IsValid = true;
    }
}

